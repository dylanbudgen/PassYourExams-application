<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="***REMOVED***PassYourExams.Fragments.MultipleChoiceFragment">

    <!--        android:background="@drawable/button_border_test"
        android:background="@drawable/button_border"
        android:elevation="5dp"-->


    <TextView
        android:id="@+id/text_multiple"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:theme="@style/questions_textview"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_1_multiple"
        android:theme="@style/questions_buttons"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_3_multiple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_2_multiple" />


    <Button
        android:id="@+id/button_2_multiple"
        android:theme="@style/questions_buttons"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@+id/button_4_multiple"
        app:layout_constraintLeft_toRightOf="@id/button_1_multiple"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/button_3_multiple"
        android:theme="@style/questions_buttons"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_4_multiple" />

    <Button
        android:id="@+id/button_4_multiple"
        android:theme="@style/questions_buttons"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_3_multiple"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/sample_1"
        app:layout_constraintBottom_toTopOf="@+id/button_1_multiple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
